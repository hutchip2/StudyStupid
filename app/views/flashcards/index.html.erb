<h1>Listing flashcards</h1>

<br />

<%= link_to 'New Deck', new_deck_path %>

<br />
<br />

<body>
  <center><canvas id="card"></canvas></center>
    <script>
      var canvas = document.getElementById("card");
      var context = canvas.getContext('2d');
      var x = canvas.width / 4;
      var y = canvas.height / 2;
      context.font = '20pt Calibri';
      context.fillStyle = 'blue';
      context.fillText("current card", x, y);
    </script>
  <br/>
  <hr>
</body>
<div id="decks_outer">
<table>
  <tc>
    <th></th>
    <th></th>
    <th></th>
  </tc>
<% i = 0 %>  
<% @decks.each do |deck| %>
<tc>
  <td><%= link_to 'Show', deck %></td>
  <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
  <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %>&#8195;&#8195;&#8195;&#8195;&#8195;&#8195;&#8195;</td>
  <canvas class="decks" id="deck<%= i %>"></canvas>
      <script>
        var canvas = document.getElementById("deck<%= i %>");
        var context = canvas.getContext('2d');
        var x = canvas.width / 4;
        var y = canvas.height / 2;
        var title = "<%= deck.title%>";
        context.font = '20pt Calibri';
        context.fillStyle = 'blue';
        context.fillText(title, x, y);
        canvas.onclick = function() { alert("Selected " + "<%= deck.title %>"); }
      </script>
</tc>
<% i+=1 %>
<% end %>
</table>
</div>

<br />
